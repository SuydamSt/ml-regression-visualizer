{
  "name": "a",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently -n api,web -c auto \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "cd apps/api && .venv/bin/uvicorn app.main:app --reload --port 8000",
    "dev:web": "cd apps/web && npm run dev",
    "install:web": "cd apps/web && npm install",
    "install:api": "cd apps/api && python3 -m venv .venv && .venv/bin/pip install -r requirements.txt",
    "install:all": "npm install && npm run install:web && npm run install:api",
    "build:web": "cd apps/web && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
